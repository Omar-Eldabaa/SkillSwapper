<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F7FA">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="24dp"
      android:gravity="center_horizontal">

    <!-- Title -->
    <TextView
        android:id="@+id/tvSetupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Up Your Skills"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="32dp" />

    <!-- Category Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skill Category"
        android:textColor="#2C3E50"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupTheme="@style/AppSpinnerTheme"
        android:layout_marginBottom="24dp" />


    <!-- Skills List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Skills"
        android:textColor="#2C3E50"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/skillsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_spinner_background"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF"
        />

    <!-- Preferred Language -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preferred Languages"
        android:textColor="#2C3E50"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerLanguages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupTheme="@style/AppSpinnerTheme"
        android:layout_marginBottom="24dp" />


    <!-- About You -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About You"
        android:textColor="#2C3E50"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etAboutYou"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:hint="Write a short bio about yourself..."
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textColor="#2C3E50"
        android:textColorHint="#BDC3C7"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:layout_marginBottom="32dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvWantToLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What skills do you want to learn?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="32dp" />

    <!-- Category Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skill Category"
        android:textColor="#2C3E50"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerCategoryDesired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupTheme="@style/AppSpinnerTheme"
        android:layout_marginBottom="24dp" />


    <!-- Skills List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Skills"
        android:textColor="#2C3E50"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/skillsContainerDesired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_spinner_background"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF"
        />



    <!-- Next Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#4A90E2"
        android:padding="14dp"
        android:elevation="4dp"
        android:layout_marginTop="8dp"

        />

  </LinearLayout>
</ScrollView>
