<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="6dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/cardBackground"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- صورة المستخدم -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="2dp"
            android:layout_marginBottom="12dp" />


        <!-- اسم المستخدم -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:layout_gravity="center" />

        <!-- نوع الماتش -->
        <com.google.android.material.chip.Chip
            android:id="@+id/matchTypeChip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfect Match"
            android:textColor="@android:color/white"
            app:chipBackgroundColor="@color/match_high"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- عنوان المهارات المتوافقة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matched Skills:"
            android:textSize="14sp"
            android:textColor="@color/secondaryText"
            android:layout_marginTop="12dp" />

        <!-- مجموعة المهارات المتوافقة -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/matchedSkillsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:singleLine="true"
            app:singleLine="true"
            app:chipSpacing="8dp"
            app:singleSelection="false"
            />
        </HorizontalScrollView>

        <!-- نسبة التطابق -->
        <ProgressBar
            android:id="@+id/matchStrengthBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="75"
            android:max="100"
            android:progressTint="@color/match_high"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- زر طلب المحادثة -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/sendMessageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send Message"
                android:drawableEnd="@drawable/send_ic"
                android:drawableTint="@color/white"
                android:backgroundTint="@color/match_high"
                android:textColor="@android:color/white"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/viewProfileButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Profile"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@android:color/white"
                android:drawableEnd="@drawable/ic_eye"
                android:drawableTint="@color/white"
                android:drawablePadding="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>
